# =============================================================================
# SILENTVOICE - PRODUCTION ENVIRONMENT
# =============================================================================
# Production environment variables (fill with actual production values)

NODE_ENV=production
APP_NAME=SilentVoice
APP_URL=https://silentvoice.com
API_URL=https://api.silentvoice.com

# Server
PORT=3001
HOST=0.0.0.0
CORS_ORIGIN=https://silentvoice.com

# Database (MongoDB Atlas or production MongoDB)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/silentvoice?retryWrites=true&w=majority
MONGODB_DB_NAME=silentvoice

# JWT (Generate strong secrets for production)
JWT_SECRET=CHANGE_ME_TO_STRONG_RANDOM_STRING_FOR_PRODUCTION
JWT_REFRESH_SECRET=CHANGE_ME_TO_ANOTHER_STRONG_RANDOM_STRING
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Session
SESSION_SECRET=CHANGE_ME_TO_PRODUCTION_SESSION_SECRET
COOKIE_SECRET=CHANGE_ME_TO_PRODUCTION_COOKIE_SECRET
BCRYPT_ROUNDS=12

# Email (Production SMTP service like SendGrid, Mailgun, etc.)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=apikey
SMTP_PASS=YOUR_SENDGRID_API_KEY
FROM_EMAIL=noreply@silentvoice.com
FROM_NAME=SilentVoice
SUPPORT_EMAIL=support@silentvoice.com
MOCK_EMAIL_SERVICE=false

# File Upload (Cloudinary or AWS S3)
CLOUDINARY_CLOUD_NAME=YOUR_CLOUDINARY_NAME
CLOUDINARY_API_KEY=YOUR_CLOUDINARY_KEY
CLOUDINARY_API_SECRET=YOUR_CLOUDINARY_SECRET
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# OAuth (Production credentials)
GOOGLE_CLIENT_ID=YOUR_GOOGLE_PROD_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_PROD_SECRET
GOOGLE_CALLBACK_URL=https://api.silentvoice.com/auth/google/callback

GITHUB_CLIENT_ID=YOUR_GITHUB_PROD_CLIENT_ID
GITHUB_CLIENT_SECRET=YOUR_GITHUB_PROD_SECRET
GITHUB_CALLBACK_URL=https://api.silentvoice.com/auth/github/callback

# Frontend
REACT_APP_API_URL=https://api.silentvoice.com/api
REACT_APP_APP_NAME=SilentVoice
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=production
REACT_APP_ENABLE_OAUTH=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_REAL_TIME=true
REACT_APP_DEBUG_MODE=false

# Socket.IO
SOCKET_CORS_ORIGIN=https://silentvoice.com
SOCKET_PORT=3002

# Redis (Production cache)
REDIS_URL=redis://redis-server:6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD

# Rate Limiting (Strict for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_LOGIN_WINDOW=900000

# Security
CSRF_SECRET=YOUR_PRODUCTION_CSRF_SECRET
SSL_ENABLED=true

# Logging
LOG_LEVEL=warn
LOG_FILE=/var/log/silentvoice/app.log
VERBOSE_LOGGING=false

# Error Tracking
SENTRY_DSN=YOUR_SENTRY_DSN
ERROR_REPORTING_ENABLED=true

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=YOUR_MIXPANEL_TOKEN

# Development Tools (Disabled in production)
SWAGGER_ENABLED=false
SEED_DATABASE=false

# Feature Flags
ENABLE_USER_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_PROFILE_PICTURES=true
ENABLE_REAL_TIME_CHAT=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_CONTENT_MODERATION=true

# Content Limits
MAX_POST_LENGTH=5000
MAX_TITLE_LENGTH=200
MAX_BIO_LENGTH=500
MAX_POSTS_PER_DAY=50
MAX_COMMENTS_PER_DAY=200

# Moderation
AUTO_MODERATE_POSTS=true
ENABLE_PROFANITY_FILTER=true
ENABLE_SPAM_DETECTION=true

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Maintenance
MAINTENANCE_MODE=false
