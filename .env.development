# =============================================================================
# SILENTVOICE - DEVELOPMENT ENVIRONMENT
# =============================================================================
# Development-specific environment variables

NODE_ENV=development
APP_NAME=SilentVoice
APP_URL=http://localhost:3000
API_URL=http://localhost:3001

# Server
PORT=3001
HOST=localhost
CORS_ORIGIN=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/silentvoice_dev
MONGODB_DB_NAME=silentvoice_dev

# JWT (Use simple secrets for development)
JWT_SECRET=dev-jwt-secret-key-silentvoice-2024
JWT_REFRESH_SECRET=dev-refresh-secret-key-silentvoice-2024
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Session
SESSION_SECRET=dev-session-secret
COOKIE_SECRET=dev-cookie-secret
BCRYPT_ROUNDS=10

# Email (Mock service for development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=test@silentvoice.dev
SMTP_PASS=testpass
FROM_EMAIL=noreply@silentvoice.dev
FROM_NAME=SilentVoice Dev
SUPPORT_EMAIL=dev@silentvoice.dev
MOCK_EMAIL_SERVICE=true

# File Upload (Local for development)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Frontend
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_APP_NAME=SilentVoice
REACT_APP_VERSION=1.0.0-dev
REACT_APP_ENVIRONMENT=development
REACT_APP_ENABLE_OAUTH=false
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_REAL_TIME=true
REACT_APP_DEBUG_MODE=true

# Socket.IO
SOCKET_CORS_ORIGIN=http://localhost:3000
SOCKET_PORT=3002

# Rate Limiting (Relaxed for development)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_LOGIN_MAX=20
RATE_LIMIT_LOGIN_WINDOW=300000

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/dev.log
VERBOSE_LOGGING=true

# Development Tools
SWAGGER_ENABLED=true
API_DOCS_PATH=/api-docs
SEED_DATABASE=true

# Feature Flags
ENABLE_USER_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_PASSWORD_RESET=true
ENABLE_PROFILE_PICTURES=true
ENABLE_REAL_TIME_CHAT=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_ANALYTICS=false
ENABLE_CONTENT_MODERATION=false

# Content Limits (Relaxed for development)
MAX_POST_LENGTH=10000
MAX_TITLE_LENGTH=300
MAX_BIO_LENGTH=1000
MAX_POSTS_PER_DAY=1000
MAX_COMMENTS_PER_DAY=1000

# Testing
AUTO_MODERATE_POSTS=false
ENABLE_PROFANITY_FILTER=false
ENABLE_SPAM_DETECTION=false
MAINTENANCE_MODE=false
