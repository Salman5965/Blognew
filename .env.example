# =============================================================================
# SILENTVOICE - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
APP_NAME=SilentVoice
APP_URL=http://localhost:3000
API_URL=http://localhost:3001

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3001
HOST=localhost
CORS_ORIGIN=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/silentvoice
MONGODB_DB_NAME=silentvoice

# Alternative: MongoDB Atlas (Cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/silentvoice?retryWrites=true&w=majority

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Secret Keys (Generate strong random strings)
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_REFRESH_SECRET=your-refresh-token-secret-here-also-long-and-random
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Session Configuration
SESSION_SECRET=your-session-secret-here
COOKIE_SECRET=your-cookie-secret-here

# Password Hashing
BCRYPT_ROUNDS=12

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Settings for email verification, password reset, etc.
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Templates
FROM_EMAIL=noreply@silentvoice.com
FROM_NAME=SilentVoice
SUPPORT_EMAIL=support@silentvoice.com

# =============================================================================
# FILE UPLOAD & STORAGE
# =============================================================================
# Cloudinary (for image/media uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Alternative: AWS S3
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=silentvoice-uploads

# Local Upload Settings
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# =============================================================================
# OAUTH PROVIDERS
# =============================================================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3001/auth/github/callback

# Apple OAuth (if implementing)
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=your-apple-private-key

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# React App Environment Variables (must start with REACT_APP_)
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_APP_NAME=SilentVoice
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# Feature Flags
REACT_APP_ENABLE_OAUTH=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_REAL_TIME=true
REACT_APP_DEBUG_MODE=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Socket.IO Configuration
SOCKET_CORS_ORIGIN=http://localhost:3000
SOCKET_PORT=3002

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Analytics (if using)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================
# Rate limiting settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_LOGIN_WINDOW=900000

# CSRF Protection
CSRF_SECRET=your-csrf-secret

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
# Log Levels: error, warn, info, debug
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Error Tracking (Sentry, etc.)
SENTRY_DSN=your-sentry-dsn
ERROR_REPORTING_ENABLED=true

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# API Documentation
SWAGGER_ENABLED=true
API_DOCS_PATH=/api-docs

# Development helpers
SEED_DATABASE=false
MOCK_EMAIL_SERVICE=true
VERBOSE_LOGGING=true

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# These should be set differently in production
# SSL/HTTPS Configuration
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Production Database
# MONGODB_URI=mongodb+srv://prod-user:password@prod-cluster.mongodb.net/silentvoice?retryWrites=true&w=majority

# Production URLs
# APP_URL=https://silentvoice.com
# API_URL=https://api.silentvoice.com
# CORS_ORIGIN=https://silentvoice.com

# Production Email
# SMTP_HOST=smtp.sendgrid.net
# SMTP_USER=apikey
# SMTP_PASS=your-sendgrid-api-key

# =============================================================================
# FEATURE FLAGS & TOGGLES
# =============================================================================
ENABLE_USER_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_PROFILE_PICTURES=true
ENABLE_REAL_TIME_CHAT=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_ANALYTICS=true
ENABLE_CONTENT_MODERATION=true

# =============================================================================
# CONTENT & MODERATION
# =============================================================================
# Content limits
MAX_POST_LENGTH=5000
MAX_TITLE_LENGTH=200
MAX_BIO_LENGTH=500
MAX_POSTS_PER_DAY=50
MAX_COMMENTS_PER_DAY=200

# Moderation settings
ENABLE_PROFANITY_FILTER=true
ENABLE_SPAM_DETECTION=true
AUTO_MODERATE_POSTS=false

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
MAINTENANCE_MODE=false

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test Database
TEST_MONGODB_URI=mongodb://localhost:27017/silentvoice_test
TEST_JWT_SECRET=test-jwt-secret
TEST_EMAIL_ENABLED=false
